.questions
  background-color var(--colorLightGray)
  width 100%
  height auto
  min-height 400px

.carousel
  text-align: left
  max-width 600px
  margin 2em auto
  border-top 1px solid var(--colorLine)
  &-content
    &[open]
      .carousel
        &-header
          border none
          &::-webkit-details-marker
            color var(--colorBase)
  &-header
    padding 1.5em 0
    border-bottom 1px solid var(--colorLine)
    font-size .9em

    &:focus
      outline 0
    &::-webkit-details-marker
      color var(--colorRed)
      float right
  @media screen and (min-width: 1024px)
    border-top 1px solid var(--colorLine)
