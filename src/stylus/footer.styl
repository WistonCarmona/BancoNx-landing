.footer
  color white
  background-color var(--colorRed)
  padding 2em 0
  &-content
    // display flex
    &-items 
      // display flex
      align-items center
  a.link-nexura
    color white
    display flex
    padding 0
    margin 0.2em 0
    transition all .5s
    &:hover
      color var(--colorBase)
  .footer-menu 
    display flex
    margin 0
  ul
    list-style none
  li
    padding 1em 0
  a
    color white
    padding: .8em
    margin 0 0.2em
    transition all .5s
    &:hover
      color var(--colorBase)
      text-decoration none

  @media screen and (max-width: 768px)
    .footer-menu 
      display: block
      margin: 0
      text-align: center
    
    li
      padding .5em 0
      width: 100%  